<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<GridPane fx:controller="cz.inited.ui.graphics.controllers.CreateCordovaController"
		  xmlns:fx="http://javafx.com/fxml">
	<Text text="Umístění aplikace" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
	<TextField fx:id="appFolder" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
	<Button text="Vyberte složku" onAction="#handleSelectFolder" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
	<Text text="Název aplikace" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
	<TextField fx:id="appName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
	<Button fx:id="createProjectButton" text="Vytvořit aplikaci" onAction="#handleCreateApp" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="3"/>
</GridPane>